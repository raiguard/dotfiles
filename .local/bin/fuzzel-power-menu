#!/bin/bash

entries="Lock screen\nLog out\nSuspend\nReboot\nShut down"

selected=$(printf "$entries" | tofi --prompt-text="power:")

case "$selected" in
    "Lock screen")
        exec swaylock;;
    "Log out")
        niri msg action quit -s;;
    "Suspend")
        exec systemctl suspend;;
    "Reboot")
        exec systemctl reboot;;
    "Shut down")
        exec systemctl poweroff -i;;
esac
