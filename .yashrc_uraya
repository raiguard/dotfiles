newhw() {
    if [ $(basename $PWD) != "assignments" ]; then
        echo "Not in assignments directory"
        return
    fi
    if [ -z "$1" ]; then
        echo "Must provide a name"
        return
    fi

    mkdir "$1"
    cd "$1"
    cp ../../../template-mla.tex "$1.tex"
    cp ../../../template-mla.pdf "$1.pdf"
    kak "$1.tex"
}

# ENGL-2010

ennotes() {
    cd ~/school/2023-fall/engl-2010/notes
    kak
}

enhw() {
    cd ~/school/2023-fall/engl-2010/assignments
}

newenhw() {
    enhw
    newhw "$@"
}

