newhw() {
    if [ $(basename $PWD) != "homework" ]; then
        echo "Not in homework directory"
        return
    fi
    if [ -z "$1" ]; then
        echo "Must provide a name"
        return
    fi

    mkdir "$1"
    cd "$1"
    cp ../../../template.tex "$1.tex"
    cp ../../../template.pdf "$1.pdf"
    kak "$1.tex"
}

# ENGL-2010

ennotes() {
    cd ~/school/2023-fall/engl-2010/notes
    kak notes-engl-2010.tex
}

enhw() {
    cd ~/school/2023-fall/engl-2010/homework
}

newenhw() {
    enhw
    newhw "$@"
}

