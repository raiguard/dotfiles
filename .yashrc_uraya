newhw() {
    if [ $(basename $PWD) != "homework" ]; then
        echo "Not in homework directory"
        return
    fi
    if [ -z "$1" ]; then
        echo "Must provide a name"
        return
    fi

    mkdir "$1"
    cd "$1"
    cp ../../../template.tex "$1.tex"
    cp ../../../template.pdf "$1.pdf"
    kak "$1.tex"
}

# PHYS-2320

physnotes() {
    cd ~/school/2023-spring/phys-2320/notes
    kak notes-phys-2320.tex
}

physhw() {
    cd ~/school/2023-spring/phys-2320/homework
}

newphyshw() {
    physhw
    newhw "$@"
}

