# vim: ft=i3

# Input configuration

input type:tablet_tool map_to_output DP-1

# Output configuration
output DP-1 mode 3440x1440@59.973Hz bg ~/pictures/wallpaper-dp-1 fill
output HDMI-A-1 disable mode 3840x2160@120Hz scale 2 adaptive_sync on bg ~/pictures/wallpaper-hdmi-1 fill
output WL-1 bg ~/pictures/wallpaper-wl-1 fill

bindsym $mod+g mode inhibited
mode inhibited {
  bindsym $mod+g mode default
}

for_window [app_id=wlroots] {
  gaps inner 0
  move to workspace 8
  workspace 8
  exec killall swaybar
  exec killall swayidle
  exec foot
  border none
  shadows disable
  gaps inner 4
}

bindsym $mod+z resize set width 2560 px
