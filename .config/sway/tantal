# vim: ft=i3

input type:tablet_tool map_to_output DP-1

output DP-1 mode 2560x1440@179.877Hz position 0,560 bg ~/pictures/wallpaper-dp-1 fill
output DP-2 mode 2560x1440@179.877Hz position 2560,0 transform 90 bg ~/pictures/wallpaper-dp-2 fill
output HDMI-A-1 disable position 0,0 mode 3840x2160@120Hz scale 2 adaptive_sync on bg ~/pictures/wallpaper-hdmi-a-1 fill

bindsym $mod+g mode inhibited
mode inhibited {
  bindsym $mod+g mode default
}
