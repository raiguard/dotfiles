# Autostart
exec pactl load-module module-switch-on-connect
exec poweralertd
exec wlsunset -l 40.3 -L -111.8 -t 2500

# Input configuration
input type:touchpad {
    natural_scroll enabled
    tap enabled
}
input type:keyboard {
    xkb_options caps:swapescape
}

# Output configuration
output eDP-1 bg ~/pictures/wallpapers/1176214.png fill

### Idle configuration

# Lock and blank screen after 5 minutes
# Suspend after 15 minutes
exec swayidle -w \
    timeout 300 'swaylock -f; swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    timeout 900 'systemctl suspend' \
    before-sleep 'swaylock -f' \
    after-resume 'swaymsg "output * dpms on"'

# Rules

for_window [title="floating"] {
    floating enable
    resize set width 70ppt
    resize set height 80ppt
}
