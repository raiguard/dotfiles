# Autostart
exec inkscape-figures watch
exec pactl load-module module-switch-on-connect
exec poweralertd

# Input configuration
input type:touchpad {
    natural_scroll enabled
    tap enabled
}
input type:keyboard {
    xkb_options caps:escape
}
input type:pointer {
    pointer_accel 0
}
input type:tablet_tool {
    map_to_output eDP-1
}

# Output configuration
output * bg ~/pictures/wallpaper fill

### Idle configuration

# Blank screen after 5 minutes
# Lock after 10 minutes
# Suspend after 15 minutes
# Disconnect all bluetooth devices before sleeping (temporary fix for instant resume)
exec swayidle -w \
    timeout 300 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    timeout 600 'swaylock -f' \
    timeout 900 'systemctl suspend' \
    before-sleep 'bluetoothctl disconnect; swaylock -f' \
    after-resume 'swaymsg "output * dpms on"'

smart_borders no_gaps

for_window [app_id="inkscape"] {
    floating enable
    resize set width 100 ppt height 100 ppt
    focus floating
}

for_window [title="SwingTerminalFrame"] {
    floating enable
}

for_window [title="Picture-in-Picture"] {
    floating enable
    sticky enable
    move position 1321 721
    resize set width 599 height 337
}

