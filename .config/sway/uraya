# Autostart
exec wlsunset -l 40.3 -L -111.8 -t 2500

# Input configuration
input 1160:4122:DELL0A20:00_0488:101A_Touchpad {
    natural_scroll enabled
    tap enabled
}
input 1:1:AT_Translated_Set_2_keyboard {
    xkb_options caps:swapescape
}

# Output configuration
output eDP-1 bg ~/pictures/wallpapers/694920.jpg fill

### Idle configuration

# Lock and blank screen after 5 minutes
# Suspend after 15 minutes
exec swayidle -w \
    timeout 300 'swaylock -f; swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    timeout 900 'systemctl suspend' \
    before-sleep 'swaylock -f' \
    after-resume 'swaymsg "output * dpms on"'
