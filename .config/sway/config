### Variables

set $mod Mod4

set $left h
set $down j
set $up k
set $right l

### Autostart

exec blueman-applet
exec mako
exec nm-applet --indicator
exec pasystray
exec ~/.config/sway/twocolumn
exec udiskie --tray
exec /usr/bin/polkit-dumb-agent
exec wlsunset -l 40.3 -L -111.8 -t 2500

### GTK3 workaround

exec_always import-gsettings

### Output configuration

# Screens
output DP-1 position 2560,0  mode 2560x1440@75Hz adaptive_sync on bg ~/pictures/wallpapers/1004356.png fill
output DP-2 position 0,0 bg ~/pictures/wallpapers/1141314.png fill
output HDMI-A-1 disable mode 3840x2160@120Hz adaptive_sync on bg ~/pictures/wallpapers/685120.png fill

### Idle configuration

# Lock after 5 minutes
exec swayidle -w \
         timeout 300 'swaylock -f' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock -f'

# Hide mouse cursor when starting to type
seat * hide_cursor when-typing enable

### Key bindings

# Start a terminal
bindsym $mod+Return exec kitty

# Kill focused window
bindsym $mod+backspace kill

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Rofi
bindsym $mod+r exec rofi -show drun
bindsym $mod+q exec rofi -show power-menu -modi 'power-menu:~/.local/bin/rofi-power-menu --choices=logout/reboot/shutdown'

# Moving around:

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move the focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Resize the focused window
bindsym $mod+Control+$left resize shrink width 30px
bindsym $mod+Control+$down resize grow height 30px
bindsym $mod+Control+$up resize shrink height 30px
bindsym $mod+Control+$right resize grow width 30px

# Workspaces:

# Output assignments
workspace 1 output DP-1
workspace 4 output DP-2

# Switch to workspace
bindsym $mod+u workspace 1
bindsym $mod+i workspace 2
bindsym $mod+o workspace 3
bindsym $mod+p workspace 4
bindsym $mod+m workspace 5
bindsym $mod+comma workspace 6
bindsym $mod+period workspace 7
bindsym $mod+slash workspace 8
# Move focused container to workspace
bindsym $mod+Shift+u move container to workspace 1
bindsym $mod+Shift+i move container to workspace 2
bindsym $mod+Shift+o move container to workspace 3
bindsym $mod+Shift+p move container to workspace 4
bindsym $mod+Shift+m move container to workspace 5
bindsym $mod+Shift+comma move container to workspace 6
bindsym $mod+Shift+period move container to workspace 7
bindsym $mod+Shift+slash move container to workspace 8
# Move workspaces
bindsym $mod+Alt+h move workspace to output left
bindsym $mod+Alt+j move workspace to output down
bindsym $mod+Alt+k move workspace to output up
bindsym $mod+Alt+l move workspace to output right

# Layout stuff:

# You can "split" the current object of your focus with
# $mod+b or $mod+v, for horizontal and vertical splits
# respectively.
bindsym $mod+b splith
bindsym $mod+v splitv

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+Shift+space focus mode_toggle

# Toggle sticky on the current window
bindsym $mod+s sticky toggle

# Promote window
bindsym $mod+w exec ~/.config/sway/promote-window

# Focus the parent container
bindsym $mod+a focus parent
# Toggle stacking layout
bindsym $mod+t layout toggle split stacking

# Scratchpad:

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# Lock

bindsym $mod+escape exec swaylock

# Media

bindsym --locked XF86AudioRaiseVolume exec ~/.config/sway/volume i
bindsym --locked XF86AudioLowerVolume exec ~/.config/sway/volume d
bindsym --locked XF86AudioPlay exec ~/.config/sway/media play-pause
bindsym --locked XF86AudioNext exec ~/.config/sway/media next
bindsym --locked XF86AudioPrev exec ~/.config/sway/media previous

# Screenshots

# Select region
bindsym print exec grimshot --notify copy area
# Focused  monitor
bindsym Shift+print exec grimshot --notify copy output
# Focused  window
bindsym Control+print exec grimshot --notify copy active
# Choose window
bindsym Alt+print exec grimshot --notify copy window

