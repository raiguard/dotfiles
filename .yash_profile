export LANG=en_US.UTF-8
export PATH="$HOME/bin/$(uname -n):$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin:$PATH:$HOME/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/bin:$HOME/dev/personal/factorio-development-tools:$HOME/go/bin"

export EDITOR="kak"
export PAGER="less"
export TERMINAL="foot"

export FACTORIO="$HOME/dev/factorio"
export FACTORIO_DEFAULT="$HOME/dev/factorio/experimental"
export FACTORIO_PATH="$FACTORIO_DEFAULT"
export FACTORIO_COMPILER="Clang"

# QT theme
export QT_PLATFORM_THEME=qt5ct
export QT_QPA_PLATFORMTHEME=qt5ct

# Make Java applications work correctly
export _JAVA_AWT_WM_NONREPARENTING=1

export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

# Make things run on Wayland
export MOZ_ENABLE_WAYLAND=1
export SDL_VIDEODRIVER=wayland,X11

# Local environment configuration
[ -f ~/.env ] && . ~/.env

[ "$(uname -n)" = "uraya" ] && export SDL_VIDEODRIVER=wayland

# Launch desktop
[ "$(tty)" = "/dev/tty1" ] && exec sway
[ "$(tty)" = "/dev/tty2" ] && exec startx

