export LANG=en_US.UTF-8
export PATH="$HOME/bin/$(uname -n):$HOME/bin:$HOME/.local/bin:$HOME/.cargo/bin:$PATH"

export EDITOR="kak"
export PAGER="less"
export TERMINAL="foot"

export FACTORIO="$HOME/dev/factorio/1.1"
export FACTORIO_11="$HOME/dev/projects/wube/Factorio-1.1"
export FACTORIO_12="$HOME/dev/projects/wube/Factorio-1.2"

# QT theme
export QT_PLATFORM_THEME=qt5ct
export QT_QPA_PLATFORMTHEME=qt5ct

# Make Java applications work correctly
export _JAVA_AWT_WM_NONREPARENTING=1

export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

# Make things run on Wayland
export MOZ_ENABLE_WAYLAND=1
export SDL_VIDEODRIVER=wayland

export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS'
    --color=fg:#abb2bf,bg:-1,hl:#56b6c2
    --color=fg+:#abb2bf,bg+:,hl+:#56b6c2
    --color=info:#e5c07b,prompt:#61afef,pointer:#e5c07b
    --color=marker:#e06c75,spinner:#c678dd,header:#98c379'

# Local environment configuration
[[ -f ~/.env ]] && . ~/.env

# Sway, i3, Gnome (x11), Gnome (wayland)
[ "$(tty)" = "/dev/tty1" ] && exec sway
[ "$(tty)" = "/dev/tty2" ] && startx /usr/bin/i3
[ "$(tty)" = "/dev/tty3" ] && startx /usr/bin/gnome-shell
[ "$(tty)" = "/dev/tty4" ] && gnome-shell --wayland

